---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/shared/layout/Header/Header.astro';
import Footer from '@/components/shared/layout/Footer/Footer.astro';
import Typography from '@/components/shared/ui/Typography/Typography.astro';

import styles from './legal-pages.module.scss';
import { LegalContentSection } from '../types';

const legalContentData: LegalContentSection[] = [
  {
    title: '1. About FUSS',
    titleVariant: 'h4',
    content: [
      {
        type: 'paragraph',
        text: [
          'FUSS is a mobile application designed to help users plan shared leisure time with friends and dates. The app allows users to create and coordinate plans for social activities in a simple and intuitive way.',
        ],
      },
      {
        type: 'paragraph',
        text: ['The FUSS website provides general information about the app.'],
      },
    ],
  },
  {
    title: '2. Eligibility',
    titleVariant: 'h4',
    content: [
      {
        type: 'paragraph',
        text: [
          'You must be at least 12 years old to use the Service. By registering for an account, you confirm that you meet this requirement and have legal permission or parental consent if required in your jurisdiction.',
        ],
      },
    ],
  },
  {
    title: '3. Account Registration',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: ['To use the FUSS app, you must register and create an account. You agree to:'],
      },
      {
        type: 'list',
        listType: 'unordered',
        items: [
          {
            text: 'Provide accurate, current, and complete information',
          },
          {
            text: 'Keep your login credentials confidential',
          },
          {
            text: 'Be responsible for all activities that occur under your account',
          },
        ],
      },
      {
        type: 'paragraph',
        text: ['If you suspect unauthorized access, notify us immediately.'],
      },
    ],
  },
  {
    title: '4. Use of the Service',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: ['You agree to use the Service lawfully and respectfully. You may not:'],
      },
      {
        type: 'list',
        listType: 'unordered',
        items: [
          {
            text: 'Violate any applicable laws or regulations',
          },
          {
            text: 'Misrepresent your identity or intentions',
          },
          {
            text: 'Attempt to interfere with the operation or security of the Service',
          },
        ],
      },
      {
        type: 'paragraph',
        text: ['FUSS reserves the right to suspend or terminate access for users who violate these Terms.'],
      },
    ],
  },
  {
    title: '5. No Paid Features or Advertising',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: [
          'FUSS does not offer paid features, subscriptions, or advertisements. The Service is provided free of charge for personal use.',
        ],
      },
    ],
  },
  {
    title: '6. Intellectual Property',
    titleVariant: 'h4',
    content: [
      {
        type: 'paragraph',
        text: [
          'All content, branding, and intellectual property within the Service belong to FUSS or its licensors. You may not copy, distribute, or use any part of the Service without our prior written permission.',
        ],
      },
    ],
  },
  {
    title: '7. Privacy',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: [
          'Your use of the Service is also subject to our Privacy Policy, which describes how we collect and handle personal information.',
        ],
      },
    ],
  },
  {
    title: '8. Disclaimer of Warranties',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: ['The Service is provided “as is” and “as available.” FUSS does not guarantee:'],
      },
      {
        type: 'list',
        listType: 'unordered',
        items: [
          {
            text: 'That the app will operate without interruptions or errors',
          },
          {
            text: 'That the service will meet your specific expectations',
          },
          {
            text: 'That the information provided is accurate or complete',
          },
        ],
      },
    ],
  },
  {
    title: '9. Limitation of Liability',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: [
          'FUSS shall not be liable for any indirect, incidental, or consequential damages arising from:',
        ],
      },
      {
        type: 'list',
        listType: 'unordered',
        items: [
          {
            text: 'Your use or inability to use the Service',
          },
          {
            text: 'Errors or omissions in the Service',
          },
          {
            text: 'Unauthorized access to your account or data',
          },
        ],
      },
    ],
  },
  {
    title: '10. Termination',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: [
          'We may suspend or terminate your access to the Service at any time and without notice if you violate these Terms or if we decide to discontinue the Service.',
        ],
      },
    ],
  },
  {
    title: '11. Changes to Terms',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: [
          'We may update these Terms at any time. If changes are material, we will notify you through the app or website. Continued use of the Service after such updates means you accept the new Terms.',
        ],
      },
    ],
  },
  {
    title: '12. Governing Law',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: [
          'These Terms shall be governed by and interpreted in accordance with the laws of the United Kingdom, without regard to conflict of laws. Any disputes shall be subject to the exclusive jurisdiction of the courts located in London, United Kingdom.',
        ],
      },
    ],
  },
  {
    title: '13. Contact Us',
    titleVariant: 'h5',
    content: [
      {
        type: 'paragraph',
        text: ['If you have any questions about these Terms, please contact us at:'],
      },
      {
        type: 'paragraph',
        text: ['Email: app@fuss-world.io'],
      },
      {
        type: 'paragraph',
        text: ['Website: [Coming Soon]'],
      },
    ],
  },
];
---

<Layout title="Privacy Policy">
  <div class="container">
    <Header />
    <main>
      <div class={styles.legalHeading}>
        <div class={styles.legalHeadingDate}>
          <Typography> Effective Date: June 21, 2025</Typography>
        </div>
        <Typography variant="h1" class={styles.legalHeadingH1}> Terms and Conditions</Typography>

        <div class={styles.legalContentText}>
          <Typography variant="body4" style="margin-top: 24px;"
            >Welcome to FUSS. These Terms and Conditions ("Terms") govern your access to and use of the FUSS
            mobile application and its associated website and services (collectively, the "Service"). By
            using FUSS, you agree to be bound by these Terms.
          </Typography>
        </div>
        <div class={styles.legalContentText}>
          <Typography variant="body4"
            >If you do not agree to these Terms, please do not use the Service.
          </Typography>
        </div>
      </div>

      {
        legalContentData.map((section) => (
          <div class={styles.legalContent}>
            <div class={styles.legalContentTitle}>
              <Typography variant={section.titleVariant}>{section.title}</Typography>
            </div>

            {section.content.map((item) => {
              if (item.type === 'paragraph') {
                return (
                  <div class={styles.legalContentText}>
                    {item.text.map((paragraph) => (
                      <Typography variant="body4">{paragraph}</Typography>
                    ))}
                  </div>
                );
              }
              if (item.type === 'list') {
                return (
                  <div class={styles.legalContentText}>
                    {item.listType === 'ordered' ? (
                      <ol>
                        {item.items.map((listItem) => (
                          <li>
                            <Typography variant="body4">{listItem.text}</Typography>
                          </li>
                        ))}
                      </ol>
                    ) : (
                      <ul>
                        {item.items.map((listItem) => (
                          <li>
                            <Typography variant="body4">{listItem.text}</Typography>
                          </li>
                        ))}
                      </ul>
                    )}
                  </div>
                );
              }
              return null;
            })}
          </div>
        ))
      }
    </main>

    <Footer />
  </div>
</Layout>
