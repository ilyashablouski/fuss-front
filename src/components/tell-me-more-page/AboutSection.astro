---
import Typography from '@/components/shared/ui/Typography/Typography.astro';
import Image from 'astro/components/Image.astro';
import CircleIcon1 from '@/assets/icons/strokes/circle-1.svg';
import friendsHavingFunImg from '@/assets/images/tell-me-more/friends-having-fun.png';

const { src: circleIcon1Src } = CircleIcon1;
---

<style lang="scss" define:vars={{ circleIcon1: `url(${circleIcon1Src})` }}>
  .about {
    margin-top: 150px;

    &__heading {
      padding-bottom: 50px;
      text-align: center;
    }

    &__wrapper {
      margin-top: 50px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 64px;
    }

    &__left {
      max-width: 519px;

      &-title {
        span {
          position: relative;
          font-weight: 600;

          &::before {
            content: '';
            position: absolute;
            left: -25px;
            top: -30px;
            width: 223.21px;
            height: 114.88px;
            background-color: var(--icon-red);
            mask-image: var(--circleIcon1);
            mask-size: contain;
            mask-repeat: no-repeat;
          }
        }
      }

      &-text {
        margin-top: 32px;
      }
    }

    &__right {
      img {
        max-width: 100%;
        height: auto;
      }
    }
  }
</style>

<section class="about">
  <div class="about__heading">
    <Typography variant="h2" style="font-weight: 600;">What it actually does:</Typography>
  </div>
  <div class="about__wrapper">
    <div class="about__left">
      <div class="about__left-title">
        <Typography variant="h3"><span>Picks&nbsp;for</span> the whole group</Typography>
      </div>
      <div class="about__left-text">
        <Typography variant="body2">
          You add your friends, they vote, and FUSS shows you the spot that fits everyoneâ€™s mood. So no one
          has to be the bad guy. Or the planner. Or the overthinker
        </Typography>
      </div>
    </div>
    <div class="about__right">
      <Image
        src={friendsHavingFunImg}
        alt="Group of friends hanging out together in real life"
        fetchpriority="high"
      />
    </div>
  </div>
</section>
