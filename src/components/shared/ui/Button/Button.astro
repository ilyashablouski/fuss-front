---
import styles from './Button.module.scss';
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'a' | 'button'>, 'type'> {
  variant?: 'contained' | 'outlined' | 'text';
  size?: 'small' | 'medium' | 'large';
  color?: 'primary' | 'secondary';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  variant = 'contained',
  size = 'medium',
  color = 'primary',
  href,
  class: className,
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  class:list={[styles.button, styles[variant], styles[size], styles[color], className]}
  {...rest}
>
  <slot />
</Tag>
