---
import AppStoreBadgeIcon from '@/assets/icons/app-store-badge.svg';
import AppStoreBadgeSmallIcon from '@/assets/icons/app-store-badge-small.svg';
import { URLS } from '@/constants';

import styles from './AppStoreButton.module.scss';

interface Props {
  isSmall?: boolean;
}

const { isSmall } = Astro.props;
---

<a href={URLS.appStore} class={styles.appStoreBtn}>
  {isSmall ? <AppStoreBadgeSmallIcon /> : <AppStoreBadgeIcon />}
</a>
